{
  "name": "asterix-game",
  "version": "1.0.0",
  "description": "Atari 2600 Asterix game clone in TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "bun run build:client && bun run --watch src/server.ts",
    "build": "bun run build:client && bun build src/server.ts --target=node --outdir=dist",
    "build:client": "bun build public/game.ts --outdir=public --target=browser --format=esm --minify",
    "start": "bun run dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:file": "vitest",
    "lint": "eslint src/**/*.ts public/**/*.ts",
    "lint:file": "eslint",
    "lint:claude": "eslint src/**/*.ts public/**/*.ts --max-warnings=0"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
